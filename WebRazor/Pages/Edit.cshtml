@page "{id:int}"
@model WebRazor.Pages.EditModel
@{
}

<form asp-page-handler="Edit" asp-route-id="@Model.Client.Id" method="post">
    <input type="hidden" asp-for="Client.Id">
    <div class="form-group">
        <label for="name">Name:</label>
        <input class="form-control" type="text" id="name" name="Client.Name" asp-for="Client.Name">
    </div>
    <div class="form-group">
        <label for="email">Address:</label>
        <input class="form-control" type="text" id="address" name="Client.Address" asp-for="Client.Address">
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
</form>
